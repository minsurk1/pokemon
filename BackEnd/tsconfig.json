{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "src", // 소스 루트 디렉토리
    "outDir": "dist", // 결과물 디렉토리
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src/**/*"], // src 폴더 내부 TypeScript 파일만 포함
  "exclude": ["dist", "node_modules"]
}
